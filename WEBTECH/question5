    <div>
        >
        <p style="background-color:red;" id="paraofdate"></p>
        <p style="background-color:red;" id="paraoftime"></p>

    </div>
    <script>
        let p1 = document.getElementById("paraofdate");
        let p2 = document.getElementById("paraoftime");

        document.getElementById("button").addEventListener("click", () => {
            const now = new Date();

            p1.innerText = `The Date is ${now.toLocaleDateString()}`;
            p2.innerText = `The Time is ${now.toLocaleTimeString()}`;
        });
    </script>

